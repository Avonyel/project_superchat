<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>chat room</title>
    <script src='/socket.io/socket.io.js'></script>
    <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="./stylesheets/stylesheet.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>
  <body>

    <!-- <nav class="navbar"> -->
    <div class="container">
      <div class="row">
        <div class="nav navbar-default">
          <h1 class="navbar-left">Welcome {{user}}!</h1>

          <form method=post action='/logout' class="navbar-form navbar-right">
            <button class="btn btn-primary">log out</button>
          </form>
        </div>
      </div>
    </div>


    <!-- </nav> -->

    <div class=container>
      <div class=row>
        <div class='col-md-3 panel panel-default'>
          <div class="panel-body">
            <div id="rooms">
              {{#each rooms as |room|}}
                <div class='room' id="{{room}}">
                  <h3>{{room}}</h3>
                  <span id="newMessage{{room}}"></span>
                </div>
              {{/each}}

              <form id='create-room'>
                <div class="form-group">
                  <input id='create-room-form' type=text class="form-control"/>
                </div>
                <button class="btn btn-default">Create Room</button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-offset-1 col-md-4" id='messageContainer'>

        </div>
      </div>
    </div>



<script src="/handlebars/handlebars.runtime.js"></script>
<script src="./javascripts/message_form_compiled.js"></script>
<script src='./javascripts/script.js'>

</script>
</body>
</html>
